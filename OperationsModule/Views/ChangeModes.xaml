<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com" 
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="OperationsModule.Views.ChangeModes">
    <StackLayout>
        <StackLayout Orientation="Vertical" BackgroundColor="Blue">
            <Label Text="{Binding SensorsDataRepository.CurrentTemperature, StringFormat='Текущая температура={0}'}" Margin="10" HorizontalOptions="Center" FontSize="18"/>
            <Label Text="{Binding SensorsDataRepository.CurrentPressure, StringFormat='Текущее давление={0}'}" Margin="10"  HorizontalOptions="Center"  FontSize="18"/>
            <Label Text="{Binding SensorsDataRepository.Mode, StringFormat='Текущий режим={0}'}"  Margin="10"  HorizontalOptions="Center"  FontSize="18"/>

        </StackLayout>
        <StackLayout BackgroundColor="Snow" Orientation="Vertical" HorizontalOptions="Center">
            <Picker ItemsSource="{Binding SensorsDataRepository.Modes}" 
                    FontSize="24" Margin="10" WidthRequest="200"/>
            <Button Text="Применить режим" Command="{Binding }" Margin="10" WidthRequest="150"/>
        </StackLayout>
        <StackLayout>
            <Grid HorizontalOptions="Center" Margin="100,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="1.5*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Button  Grid.Row="0" Grid.Column="0" Text="+" />
                <Label Grid.Row="1" Grid.Column="0" Text="0"  HorizontalOptions="Center" VerticalOptions="Center"/>
                <Button  Grid.Row="2" Grid.Column="0" Text="-" />
                <Button  Grid.Row="0" Grid.Column="1" Text="+" />
                <Label Grid.Row="1" Grid.Column="1" Text="0"  HorizontalOptions="Center" VerticalOptions="Center"/>
                <Button  Grid.Row="2" Grid.Column="1" Text="-" />
                <Button  Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Text="Мощность (до 50%)" />
            </Grid>
        </StackLayout>
    </StackLayout>
</ContentPage>
    