<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DeflectorMobilePrism.Views.MainPage"
             Title="{Binding Title}" Background="#CDBEA7">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Frame BackgroundColor="#882426" CornerRadius="10" HeightRequest="50" VerticalOptions="Center">
            <Label Text="Выберите соединение" VerticalOptions="Center" HorizontalOptions="Center" Margin="10" FontSize="20"  
                    FontFamily="sans-serif-light" FontAttributes="Bold"/>
        </Frame>
        <ListView x:Name="BondedDevices" ItemsSource="{Binding Available_Devices}" SelectedItem="{Binding SelectedDevice, Mode=TwoWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout  VerticalOptions="Center">
                            <Label Text="{Binding Name}" FontSize="18" FontAttributes="Bold" BackgroundColor="#896e69" TextColor="White" HorizontalTextAlignment="Center"/>
                        </StackLayout>
                    </ViewCell>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>